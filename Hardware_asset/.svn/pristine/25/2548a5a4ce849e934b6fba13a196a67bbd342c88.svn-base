@{
    ViewBag.Title = "Asset Management";
        Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .total-count{
        font-size: 50px;
    }
</style>

<section class="text-center height-40 imagebg" data-overlay="4">
    <div class="background-image-holder">
        <img alt="whatsnew-banner" src="~/images/Banner.jpg">
        @*<img alt="whatsnew-banner" src="//cdn.syncfusion.com/content/images/products/whats-new/optimizedimages/whatsnew-08.jpg?v=14112017083830">*@
    </div>
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="typed-headline">
                    <h1> Asset Management </h1>
                    <h3 class="lead">Manage your assets here</h3>
                </div>
            </div>
        </div>
    </div>
</section>
<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                <a href="/mydevices" class="block">
                    <div class="feature boxed boxed--border border--round text-center">
                        <i class="icon--lg icon-Credit-Card2"></i>
                        <span class="h5 color--primary">My Devices</span>
                    </div>
                </a>
            </div>
            <div class="col-sm-3">
                <a href="/devicelist" class="block">
                    <div class="feature boxed boxed--border border--round text-center">
                        <i class="icon--lg icon-Email"></i>
                        <span class="h5 color--primary">Request Device</span>
                    </div>
                </a>
            </div>
            <div class="col-sm-3">
                <a href="/purchase" class="block">
                    <div class="feature boxed boxed--border border--round text-center">
                        <i class="icon--lg icon-Cursor-Click2"></i>
                        <span class="h5 color--primary">Purchase Request</span>
                    </div>
                </a>
            </div>
            <div class="col-sm-3">
                <a href="#" class="block">
                    <div class="feature boxed boxed--border border--round text-center">
                        <i class="icon--lg icon-Handshake"></i>
                        <span class="h5 color--primary">Approve device requests</span>
                    </div>
                </a>
            </div>
        </div>
        <!--end of row-->
    </div>
    <!--end of container-->
</section>
<footer class="container">
    <p>&copy; @DateTime.Now.Year - Asset Management</p>
</footer>
